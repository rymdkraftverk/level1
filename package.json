{
  "name": "l1",
  "version": "0.6.1",
  "description": "Delayed and repeated code execution for games",
  "main": "./dist/index.js",
  "files": [
    "/dist/*"
  ],
  "scripts": {
    "clean": "rm -f l1.tgz",
    "release": "yarn build && np --no-tests",
    "build": "rm -rf dist && parcel build ./src/index.js",
    "go": "yarn clean && yarn build && yarn pack --filename l1.tgz && cd example && yarn refresh && yarn test && cd -"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rymdkraftverk/level1.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true
  },
  "xo": {
    "prettier": true,
    "env": [
      "browser",
      "es2020",
      "node"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "capitalized-comments": "off"
    }
  },
  "devDependencies": {
    "np": "6.2.1",
    "parcel": "2.0.0-alpha.3.2",
    "xo": "0.29.1"
  }
}
