{
  "name": "level1-template",
  "version": "1.0.0",
  "description": "Template to get started with level1",
  "main": "index.js",
  "scripts": {
    "l1": "yarn add file:../client",
    "l1-server": "yarn add file:../server",
    "lint": "eslint src",
    "build": "browserify src/client/index.js -o public/bundle.js -t [ babelify ]",
    "watch": "watchify src/client/index.js -o public/bundle.js -t [ babelify ] --debug",
    "start": "VCAP_APP_PORT=8000 nodemon src/server"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-preset-env": "^1.7.0",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "eslint": "^5.4.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "nodemon": "^1.18.3",
    "watchify": "^3.11.0"
  },
  "dependencies": {
    "l1": "file:../client",
    "l1-server": "file:../server"
  }
}
